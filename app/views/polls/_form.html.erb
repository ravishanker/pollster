<h1>Create a new Poll:</h1>

<%= form_for(@poll) do |p| %>
  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
      <% @poll.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= p.label :title %><br />
    <%= p.text_field :title %>
  </div>
  
  <div class="question">
      <%= p.fields_for :questions do |q| %>
      <%= render 'question', :p => q %><br>
      <% end %>
  </div>


  <div class="actions">
    <%= p.submit "Create" %>
  </div>
<% end %>
